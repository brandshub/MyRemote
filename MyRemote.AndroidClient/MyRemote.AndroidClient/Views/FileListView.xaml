<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyRemote.AndroidClient.Views.FileListView">
    <ContentPage.Content>
        <AbsoluteLayout>
            <Label x:Name="PathZ"/>
            <ListView x:Name="FilesList"
            ItemsSource="{Binding Items}"
            ItemTapped="Handle_ItemTapped"
            CachingStrategy="RecycleElement">
                <!--Built in Cells-->
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal" Padding="15,0,20,0">
                                <Label  Text="{Binding Type}"  FontSize="18" HorizontalOptions="Start"  VerticalOptions="Center" />
                                <Label  Text="{Binding Name}"   HorizontalOptions="Start"  VerticalOptions="Center" />
                                <Label  Text="{Binding DateTimeChanged}"  HorizontalOptions="EndAndExpand"  VerticalOptions="Center" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>
